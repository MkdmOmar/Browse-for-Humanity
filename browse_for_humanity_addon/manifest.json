{
  "name": "BigAnton",
  "description": "Big and Toned",
  "version": "1",
  "manifest_version": 2,
  "icons": {
    "16": "icon.png",
    "128": "icon.png"
  },
	"background": {
    "page": "background.html"
  },
   "content_scripts": [{
     "js": [
            "mcmc.js"
            ],
     "css": [ ],
     "matches": ["http://*/*", "https://*/*"]
   }
   ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "webRequest",
    "webNavigation",
    "webRequestBlocking",
    "tabs",
    "http://*/*", "https://*/*",
    "alarms",
    "notifications" 
  ]
}
